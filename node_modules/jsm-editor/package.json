    "fs-extra": "^10.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yargs": "^17.0.1"
  },
  "peerDependencies": {
    "@lexical/react": "^0.16.1",
    "@lexical/rich-text": "^0.16.1",
    "@lexical/selection": "^0.16.1",
    "@lexical/utils": "^0.16.1",
    "lexical": "^0.16.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^14.0.0",
    "@types/react": "^18.3.3",
    "@types/yargs": "^17.0.1",
    "copyfiles": "^2.4.1",
    "ts-migrate": "^0.1.35",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.0"
  },
  "keywords": [
