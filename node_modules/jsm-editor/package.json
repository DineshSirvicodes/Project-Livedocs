{
  "name": "jsm-editor",
  "version": "0.0.12",
  "main": "dist/index.js",
  "bin": {
    "jsm-editor": "dist/cli.js"
  },
  "homepage": "https://www.jsmastery.pro",
  "repository": {
    "url": "https://github.com/JavaScript-Mastery-Pro/jsm-editor.git"
  },
  "scripts": {
    "build": "tsc && npm run copy-files",
